@page "/Roles/Edite/{roleId?}"
@using RolesManagementResources = UserManagement.Localization.RolesManagement.RolesManagement
@using SharedResources = Common.Localization.Shared.Shared
@model UserManagement.Web.Areas.UserManagementAdmin.Pages.Roles.EditeModel
@{
}



<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <h2>@RolesManagementResources.Edite_FormTitle <small>@RolesManagementResources.Edite_FormDesc</small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>

                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                <div asp-validation-summary="All" class="text-danger"></div>

                <form id="demo-form2" method="post" data-parsley-validate class="form-horizontal form-label-left">
                    <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">
                            @RolesManagementResources.FormRoleName<span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <input type="hidden" asp-for="Input.Id" />

                            <input type="text" asp-for="Input.Name" class="form-control ">
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="ln_solid"></div>
                    <div class="item form-group">
                        <div class="col-md-6 col-sm-6 offset-md-3">
                            <button type="submit" asp-page-handler="Submit" class="btn btn-success">@SharedResources.Submit</button>
                            <button type="submit" asp-page-handler="Cancel" formnovalidate="formnovalidate" class="btn btn-primary">@SharedResources.BackToList</button>

                            &nbsp;
                            <button type="submit" asp-page-handler="Remove" asp-route-id="@Model.Input.Id" onclick="return confirm('@SharedResources.DeleteConfirm');" formnovalidate="formnovalidate" class="btn btn-danger">@SharedResources.Delete</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>



