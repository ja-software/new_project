@page
@using IndexResource = UserManagement.Localization.Index.Index
@model UserManagement.Web.Areas.UserManagementAdmin.Pages.IndexModel
@{
}

@section Styles{
    <!-- bootstrap-daterangepicker -->
    <link href="~/TemplateManagement/vendors/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet" />
}


<div class="row">
    <div class="col-md-12">
        <div class="">
            <div class="x_content">

                <div class="row">
                    <div class="animated flipInY col-lg-3 col-md-3 col-sm-6  ">
                        <div class="tile-stats">
                            <div class="icon">
                                <i class="fa fa-user"></i>
                            </div>
                            <div class="count">@Model.CardsModel.TotalUsers</div>

                            <h3>@IndexResource.TotalUsers</h3>
                            <p>@IndexResource.TotalUsersDesc</p>
                        </div>
                    </div>
                    <div class="animated flipInY col-lg-3 col-md-3 col-sm-6  ">
                        <div class="tile-stats">
                            <div class="icon">
                                <i class="fa fa-user"></i>
                            </div>
                            <div class="count">@Model.CardsModel.ActiveUsers</div>

                            <h3>@IndexResource.ActiveUsers</h3>
                            <p>@IndexResource.ActiveUsersDesc</p>
                        </div>
                    </div>
                    <div class="animated flipInY col-lg-3 col-md-3 col-sm-6  ">
                        <div class="tile-stats">
                            <div class="icon">
                                <i class="fa fa-user"></i>
                            </div>
                            <div class="count">@Model.CardsModel.InactiveUsers</div>

                            <h3>@IndexResource.InactiveUsers</h3>
                            <p>@IndexResource.InactiveUsersDesc</p>
                        </div>
                    </div>
                    <div class="animated flipInY col-lg-3 col-md-3 col-sm-6  ">
                        <div class="tile-stats">
                            <div class="icon">
                                <i class="fa fa-shield"></i>
                            </div>
                            <div class="count">@Model.CardsModel.TotalRoles</div>

                            <h3>@IndexResource.TotalRoles</h3>
                            <p>@IndexResource.TotalRolesDesc</p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="dashboard_graph">

            <div class="row x_title">
                <div class="col-md-6">
                    <h3>@IndexResource.RegistrationHistory <small>@IndexResource.RegistrationHistoryDesc </small></h3>
                </div>
                <div class="col-md-6">
                    <div id="div_userPerDayReport" class="pull-right" style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc">
                        <i class="glyphicon glyphicon-calendar fa fa-calendar"></i>
                        <span>December 30, 2014 - January 28, 2015</span> <b class="caret"></b>
                    </div>
                </div>
            </div>

            <div class="col-md-12 col-sm-9 ">
                <div id="chart_plot_01_test" class="demo-placeholder"></div>
            </div>


            <div class="clearfix"></div>
        </div>
    </div>

</div>

@section Scripts{
    <!-- bootstrap-daterangepicker -->
    <script src="~/TemplateManagement/vendors/moment/min/moment.min.js"></script>

    @if (CrossCutting.Core.Globalization.CultureHelper.IsArabic)
    {
        <script src="~/TemplateManagement/vendors/bootstrap-daterangepicker/daterangepicker.ar.js"></script>
    }
    else
    {
        <script src="~/TemplateManagement/vendors/bootstrap-daterangepicker/daterangepicker.js"></script>
    }

    <!-- Flot -->
    <script src="~/TemplateManagement/vendors/Flot/jquery.flot.js"></script>
    <script src="~/TemplateManagement/vendors/Flot/jquery.flot.pie.js"></script>
    <script src="~/TemplateManagement/vendors/Flot/jquery.flot.time.js"></script>
    <script src="~/TemplateManagement/vendors/Flot/jquery.flot.stack.js"></script>
    <script src="~/TemplateManagement/vendors/Flot/jquery.flot.resize.js"></script>
    <!-- Flot plugins -->
    <script src="~/TemplateManagement/vendors/flot.orderbars/js/jquery.flot.orderBars.js"></script>
    <script src="~/TemplateManagement/vendors/flot-spline/js/jquery.flot.spline.min.js"></script>
    <script src="~/TemplateManagement/vendors/flot.curvedlines/curvedLines.js"></script>
    <!-- DateJS -->
    <script src="~/TemplateManagement/vendors/DateJS/build/date.js"></script>

    <script src="~/ClientApp/UserManagementAdmin/Index/app.index.js"></script>
    <script>
         var initialData = {
             dashboardDataBaseUrl: '@Url.Page("/Index", "DashboardData", new {area= "UserManagementAdmin" })'
        };
        $app.index.Init(initialData);

    </script>
}